{
  "name": "jest-cypress-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:cov": "jest --coverage --coverageDirectory reports/coverage-jest",
    "cy": "$(npm bin)/cypress",
    "cy:open": "npm run cy -- open",
    "cy:run": "npm run cy -- run",
    "cy:run:cov": "NODE_ENV=test COV_REPORT_DIR=reports/coverage-cypress COVERAGE=true npm run cy -- run",
    "report": "npm run cov:merge",
    "build": "tsc",
    "build:tests": "cd tests && tsc",
    "build:cy": "cd cypress && tsc",
    "build:all": "npm run build && npm run build:cy && npm run build:tests",
    "test:all": "npm run test:cov && npm run cy:run:cov",
    "cov:merge": "node ./.scripts/merge.js",
    "cov:report:show": "http-server coverage-full/lcov-report",
    "cov:jest": "http-server reports/coverage-jest/lcov-report",
    "cov:cy": "http-server reports/coverage-cypress/lcov-report",
    "all": "rm -rf lib reports .nyc_output && npm run build:all && npm run test:all && npm run report&& npm run cov:report:show"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@cypress/code-coverage": "^3.10.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "cypress": "^11.2.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jest": "^29.3.1",
    "nyc": "^15.1.0",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.9.3"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9"
  }
}
