{
  "name": "cypress-template",
  "version": "1.0.0",
  "description": "cypress template to create cypress libraries with typescript / jest / code coverage",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --fix '**/*.{ts,tsx,js}'",
    "test": "jest",
    "test:cov": "jest --coverage --coverageDirectory reports/coverage-jest",
    "cy": "$(npm bin)/cypress",
    "cy:open": "npm run cy -- open",
    "cy:run": "rm -rf js-files-cypress && npm run cy -- run",
    "cy:run:cov": "COVERAGE_REPORT_DIR=reports/coverage-cypress COVERAGE=true npm run cy -- run",
    "report": "npm run cov:merge",
    "build": "tsc",
    "build:tests": "cd tests && tsc",
    "build:cy": "cd integration && tsc",
    "build:all": "npm run build && npm run build:cy && npm run build:tests",
    "test:all": "npm run test:cov && npm run cy:run:cov",
    "cov:merge": "node ./.scripts/merge.js --cypress reports/coverage-cypress --jest reports/coverage-jest --out reports/coverage-full",
    "cov:report:show": "http-server reports/coverage-full/lcov-report",
    "cov:jest": "http-server reports/coverage-jest/lcov-report",
    "cov:cy": "http-server reports/coverage-cypress/lcov-report",
    "all": "rm -rf lib reports coverage-nyc .nyc_output && npm run lint && npm run build:all && npm run test:all && npm run report && npm run cov:report:show"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "coverage-istanbul-loader": "^3.0.5",
    "cypress": "^11.2.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "nyc": "^15.1.0",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0"
  }
}
