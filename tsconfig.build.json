{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": ["node", "jest", "cypress"],
    "baseUrl": "./",
    "paths": {
      "cy-local": ["./src"],
      "cy-local/*": ["./src/*"]
    }
  },

  "include": ["src"]
}
